<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Cadastro</title>
    <link href="./bootstrap css/bootstrap.css" rel="stylesheet">
	<link href="./bootstrap css/signin.css" rel="stylesheet">
    
   
</head>

<body>
<header>    
<nav class="navbar fixed-top navbar-dark bg-dark">
<a class="navbar-brand" style="background: whitesmoke">OUTLET CLOTHING CENTER</a>
</nav>
</header>

  <div class="container">
  <div class="form-signin" style="background: grey;">
    
        <form action="/cadastro" method="POST" class="form_cadastro">
            
            <div>
                {{ csrfField() }}
                <h2>Cadastro de Usu√°rios</h2> 
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control"><br>
                <br>
                <label for="username">Nome:</label>
                <input type="text" id="nome" name="username" class="form-control"><br>
                <br>
                <label for="password">Senha:</label>
                <input type="password" id="senha" name="password" class="form-control"><br>
                <br>
            </div>
            <div>
                <input type="submit" value="Confirmar" class="btn btn-success btn-block">
                
            </div>

        </form>
        <input type='submit' value='Voltar' class="btn btn-success btn-block" onclick="javascript: history.go(-1)" >

</body>    