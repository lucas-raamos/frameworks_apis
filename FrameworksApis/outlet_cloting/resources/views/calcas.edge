<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Calças</title>
    {{ style ('principal')}}
    {{ style ('calca')}}
</head>

<body>
    <div id="container">
    <header class="headerRoupas">
    <div class="barra"><p>OUTLET ©️LOTHING CENTER</p></div>

    <h1>Bem vindo Adm!!{{email}}</h1>
    <nav>
            <a href="/calcas">Calças</a>
            <a href="/camisetas">Camisetas</a>
            <a href="/casacos">Casacos</a>
            <a href="/funcionarios">Funcionarios</a>
            <a href="/usuarios">Clientes</a>
            <a href="/sair">Sair</a>
    </nav>
    </header>
    <main>
        <table class="tableForm">
        <td>
	    <h2>ADICIONE UMA NOVA CALÇA</h2>
        <form action = "/calcas" method = "POST" class= "form_calcas">
            {{ csrfField() }}
            <div>
                <label for="marca_calca">Marca:</label>
                <input type="text" id="marca_calca" name ="marca_calca">
                <br><br>
                <label for="tamanho_calca">Tamanho:</label>
                <input type="text" id="tamanho_calca" name = "tamanho_calca">
                <br><br>
                <label for="qtd_calca">Quantidade:</label>
                <input type="text" id="qtd_calca" name="qtd_calca">
                <br><br>
            </div>
            <br>
            <div>
                <button class = "button" type="submit">Adicionar</button>
                
            </div>
        </td>
        </form>
        </table>
    <table>
        <h2>LISTA DE CALÇAS</h2>
        @each(calcas in calcas)
        <table>
            <tr>
              
                <th style='text-align: center;'>Id</th>
                <th style='text-align: center;'>Marca</th>
                <th style='text-align: center;'>Tamanho</th>
                <th style='text-align: center;'>Quantidade</th>
                <th colspan="2" >Ação</th>
            </tr>
            <td>
            {{ (calcas.id -1) }}
            </td>
            <td>   
            {{ calcas.marca_calca }}
            </td>
            <td>
            {{ calcas.tamanho_calca }}
            </td>
            <td>
            {{ calcas.qtd_calca }}
            </td>
            <td>
            <button class="button">
            <a href="/calca-edite/{{calcas.id}}" method = "GET" class="button">Editar</a>
            </button>
            </td>
            <td>
            <button class="button">
            <a href="/delete-calca/{{calcas.id}}" method = "GET" onclick="deletar()" class="button">Deletar</a>
            </button>
            </td>
            </table>

            @else
                    <h1 class="tabela">Nenhuma tarefa foi criada ainda!</h1>
            @endeach
            <br>
            </div> 
        </tr>    
</main>
    <footer class="footer">
   
        <p>Copyright @LucasRamos - 35.988.777/0001-33 - 2021 - Todos os direitos reservados</p>
    </footer>
</body>
<script>
    function deletar()
    {
    alert("Calça deletada!");
    }
</script>

</html>